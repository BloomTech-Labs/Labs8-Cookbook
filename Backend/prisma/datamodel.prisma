type Ingredient {
  id: ID! @unique
  name: String!
  amount: Float!
  unit: String!
  recipe: Recipe!
}

type Subscription {
  id: ID! @unique
  type: String!
  amount: Int!
  user: User!
  charge: String!
}

type Event {
  id: ID! @unique
  recipe: Recipe!
  start: String!
  end: String!
  resourceId: Int!
  title: String!
}