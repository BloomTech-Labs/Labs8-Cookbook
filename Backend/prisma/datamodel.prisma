type Recipe {
  id: ID! @unique
  title: String!
  readyInMinutes: Int!
  servings: Int!
  image: String!
  createdBy: User!
  # instructions: [Instruction!]!
  
  # imageType: String!
  # dishTypes: String!
  # analyzedInstructions: [String!]!
}

type Instruction {
  id: ID! @unique
  stepNum: Int!
  description: String!
  isComplete: Boolean @default(value: "false")
  recipe: Recipe!
}

