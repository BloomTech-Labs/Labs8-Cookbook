## this file defines the schema database for prisma/graphql server

type User {
  id: ID! @unique
  auth0Sub: String! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  isSubscribed: Boolean! @default(value: false)
  recipes: [Recipe!]!
}

type Recipe {
  id: ID! @unique
  title: String!
  prepTime: String!
  servings: String!
  image: String!
  url: String!
  createdBy: User!
  ingredients: [Ingredient!]!
  instructions: [Instruction!]!
  events: [Event!]!
}

type Event {
  id: ID! @unique
  recipe: Recipe!
  date: String!
  mealType: String!
}

type Instruction {
  id: ID! @unique
  stepNum: Int!
  description: String!
  isCompleted: Boolean! @default(value: false)
  event: Event!
}

type Ingredient {
  id: ID! @unique
  name: String!
  quantity: Float!
  event: Event!
}

type GroceryList {
  id: ID! @unique
  startDate: String!
  endDate: String!
  groceryList: [totalQuantity!]!
}

type totalQuantity {
  id: ID! @unique
  name: String!
  quantity: Float!
  isPurchased: Boolean! @default(value: false)
}

type Subscription {
  id: ID! @unique
  type: String!
  amount: Int!
  user: User!
  charge: String!
}
